rule codesign
  command = python3 ../../tool/codesign.py ../../appex appex

rule copy_bundle_data
  command = rm -rf appex && cp -Rc ${in} ${out}

build appex: codesign ../../appex/input
build plugins/appex: copy_bundle_data appex
build all: phony plugins/appex
default all
